<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_image6"
    android:gravity="center_horizontal"
    tools:context=".InitialFormActivity" >

    <LinearLayout
        android:id="@+id/top_description"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:background="#90FFFFFF"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HomeScreenHeader"
            android:text="Book a Table" />
    </LinearLayout>

    <TextView
        android:id="@+id/no_of_ppl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_description"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:text="Number of People" />

    <EditText
        android:id="@+id/edit_no_of_ppl"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/no_of_ppl"
        android:layout_below="@+id/no_of_ppl"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#70FFFFFF"
        android:textColor="#000000"
        android:gravity="center"
        android:inputType="number" />

    <TextView
        android:id="@+id/time_picker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_no_of_ppl"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:text="Time" />

    <Button
        android:id="@+id/time_picker"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/no_of_ppl"
        android:layout_below="@+id/time_picker_text"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#70FFFFFF"
        android:textColor="#000000"
        android:gravity="center" />

    <Button
        android:id="@+id/next"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time_picker"
        android:layout_marginTop="40dp"
        android:background="#90FFFFFF"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:text="Next" />

</RelativeLayout>